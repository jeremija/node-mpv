doctype html
html
  head
    title mpvjs
    meta(name="viewport", content="width=device-width, initial-scale=1")
  style.
    * {
      box-sizing: border-box;
    }
    html, body {
      height: 100%;
    }
    body {
      background-color: #333;
      color: #fff;
      margin: 0;
      font-family: sans-serif;
    }
    h1 {
      margin: 1em 0 0px;
      padding: 0;
      font-size: 16px;
      text-align: center;
    }
    form #url {
      text-decoration: underline;
      font-weight: bold;
      padding: 1em;
      width: 100%;
    }

    form #url::selection,
    form #url::-moz-selection {
      background: #666;
    }

    form input,
    form button {
      background-color: #444;
      color: #fff;
      border: none;
      border-radius: 5px 5px;
      box-shadow: 0px 0px 5px #222;
    }

    div.controls {
      margin: 1em 0;
      text-align: center;
    }
    div.controls input,
    div.controls button {
      margin-right: 1em;
      text-align: center;
      width: 60px;
      height: 40px;
    }

    div#status {
      overflow: auto;
    }
    div#status p {
      color: #ccc;
      margin: 0;
      font-size: 0.8em;
    }

    div#status p.err {
      color: #fcc;
      color: #660000;
    }

    div.box {
      display: flex;
      flex-flow: column;
      height: 100%;
    }

    div.box {
      padding: 1em;
    }

    div.box .row.header {
      flex: 0 1 auto;
    }

    div.box .row.urls {
      flex: 0 1 auto;
    }

    div.box .row.content {
      flex: 1 1 auto;
    }

    .row.urls a {
      color: #ccc;
      display: block;
      font-weight: bold;
      text-decoration: underline;
    }

body
  h1#title (no title)

  div.box
    div.row.header
      form(id='main')
        input(id='url', value='#{url}', type='text')
        br
        div.controls
          input(type='submit', value='GO')
          button(id='stop') STOP
          button(id='pause') PAUSE
          button(id='next') NEXT
          button(id='volume-up') +
          button(id='volume-down') -

    div.row.urls(id='urls')
      each url in urlHistory
        a(href='#{url.url}') #{url.url}

    div.row.content(id='status')

  script(src='js/index.js')
