doctype html
html
  head
    title mpvjs
    meta(name="viewport", content="width=device-width, initial-scale=1")
  link(rel="stylesheet" type="text/css" href="less/main.css")

body
  h1#title (no title)

  div.box
    div.row.header
      form(id='main')
        div.search
          input(id='url', value='#{url}', type='text')
          div.search-results
        div.controls
          button.icon-play3(type='submit', value='')
          button.icon-stop2(id='stop')
          button.icon-pause2(id='pause')
          button.icon-next2(id='next')
          button.icon-volume-increase(id='volume-up')
          button.icon-volume-decrease(id='volume-down')

    div.row.urls(id='urls')
      each url in urlHistory
        a(href='#{url}') #{url}

    div.row.content(id='status')

  script(src='js/index.js')
